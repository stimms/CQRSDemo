
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<input type="text" onchange="search()" id="searchTerm"/>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<script>
    function search() {
        $.getJSON("/User/Search", { searchTerm: $("#searchTerm").val() }, (json) => {
            $("tbody").html("");
            for(var person of json)
            {
                $("tbody").append("<tr><td></td><td>" + person.FirstName + "</td><td>" + person.LastName + "</td></tr>");
            }
        });
    }
    $(() =>search());
</script>
